<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/section_daily_card_view_height"
    android:layout_margin="@dimen/section_daily_card_view_margin"
    app:cardBackgroundColor="@color/card_view_background"
    app:cardCornerRadius="@dimen/section_daily_card_view_corner_radius"
    app:cardElevation="@dimen/section_daily_card_view_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/section_daily_relative_layout_padding">

        <TextView
            android:id="@+id/tv_section_daily_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/section_daily_title_margin_right"
            android:lineSpacingExtra="@dimen/section_daily_title_line_space"
            android:maxLines="3"
            android:maxWidth="@dimen/section_daily_title_max_width"
            android:padding="@dimen/section_daily_title_padding"
            android:textColor="@color/text_color_normal"
            android:textSize="@dimen/text_large_body"/>

        <TextView
            android:id="@+id/tv_section_daily_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:textColor="@color/text_color_normal"
            android:textSize="@dimen/text_mini_body"/>

        <ImageView
            android:id="@+id/iv_section_daily_image"
            android:layout_width="@dimen/section_daily_image_width"
            android:layout_height="@dimen/section_daily_image_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/image_default"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>