<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/news_card_view_height"
    android:layout_margin="@dimen/news_card_view_margin"
    app:cardBackgroundColor="@color/card_view_background"
    app:cardCornerRadius="@dimen/news_card_view_corner_radius"
    app:cardElevation="@dimen/news_card_view_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/news_relative_layout_padding">

        <ImageView
            android:id="@+id/iv_news_image"
            android:layout_width="@dimen/news_image_width"
            android:layout_height="@dimen/news_image_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/image_default"/>

        <TextView
            android:id="@+id/tv_news_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/news_title_margin_left"
            android:layout_marginStart="@dimen/news_title_margin_left"
            android:layout_toEndOf="@id/iv_news_image"
            android:layout_toRightOf="@id/iv_news_image"
            android:gravity="top|center"
            android:lineSpacingExtra="@dimen/news_title_line_space"
            android:maxLines="3"
            android:textColor="@color/text_color_normal"
            android:textSize="@dimen/text_large_body"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>