<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/theme_card_view_height"
    android:layout_margin="@dimen/theme_card_view_margin"
    app:cardBackgroundColor="@color/card_view_background"
    app:cardCornerRadius="@dimen/theme_card_view_corner_radius"
    app:cardElevation="@dimen/theme_card_view_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_theme_image"
            android:layout_width="@dimen/theme_image_width"
            android:layout_height="@dimen/theme_image_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/theme_relative_layout_padding"
            android:scaleType="centerCrop"
            android:src="@drawable/image_default"/>

        <TextView
            android:id="@+id/tv_theme_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/theme_description_margin_left"
            android:layout_marginTop="@dimen/theme_description_margin_top"
            android:layout_toRightOf="@id/iv_theme_image"
            android:padding="@dimen/theme_relative_layout_padding"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_large_body"/>

        <TextView
            android:id="@+id/tv_theme_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:padding="@dimen/theme_relative_layout_padding"
            android:textColor="@color/text_color_normal"
            android:textSize="@dimen/text_mini_body"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>